{% if entry.pageImage.exists() %}
  <meta class='swiftype' name='image' data-type='enum' content="{{ entry.pageImage.one().getUrl('tf280') }}">
{% else %}
    {% if entry.profileImage.exists() %}
      <meta class='swiftype' name='image' data-type='enum' content="{{ entry.profileImage.one().getUrl('tf280') }}">
    {% endif %}
{% endif %}

{% if entry.heading is not empty %}
  <meta class='swiftype' name='title' data-type='string' content='{{ entry.heading }}' />
{% else %}
  <meta class='swiftype' name='title' data-type='string' content='{{ entry.title }}' />
{% endif %}

<meta class='swiftype' name='published_at' data-type='date' content='{{ entry.postDate|date('c') }}' />
